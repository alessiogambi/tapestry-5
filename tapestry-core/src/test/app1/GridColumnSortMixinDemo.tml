<html t:type="Border" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

	<h1>Grid Mixins Demo</h1>

	<p>
		[
		<t:actionlink t:id="reset1">reset the Grid</t:actionlink>
		]
	</p>

	<table t:id="grid1" source="tracks" t:mixins="gridColumnSort, gridCurrentPage"
		gridColumnSort.includeId="false" gridCurrentPage.includeId="false"
		rowsPerPage="5" />

	<p>
		[
		<t:actionlink t:id="reset2">reset the Grid</t:actionlink>
		]
	</p>

	<table t:id="grid2" source="tracks" t:mixins="gridColumnSort, gridCurrentPage"
		rowsPerPage="5" />

</html>
